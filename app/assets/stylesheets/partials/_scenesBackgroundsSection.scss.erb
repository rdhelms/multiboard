.scenesBackgroundsSection {
  position: relative;
  top: 130px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  .scenesBackgrounds {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    width: 100%;
    .userContainer, .publicContainer {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 50%;
      min-width: 400px;
    }
  }
}

.sceneControlButtons, .publicControlButtons {
  width: 100%;
  height: 50px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 10px;
  button {
    padding: 10px;
    font-size: 1.5vw;
    border-radius: 10px;
    background: white;
    box-shadow: 5px 5px 20px #333;
    transition: all .2s ease;
    outline-style: none;
    &:hover {
      transform: scale(1.1);
    }
  }
}

.userScenes, .userBackgrounds, .publicScenes, .publicBackgrounds {
  padding: 10px;
  background: rgba(0,0,0,0.5);
  border-radius: 10px;
  border: 2px solid white;
  margin-top: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  h1 {
    font-family: Arial, sans-serif;
    font-size: 2.5vw;
    color: white;
  }
  p {
    font-family: Arial, sans-serif;
    font-size: 2vw;
  }
  .sceneOption, .backgroundOption {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin: 10px;
    background: white;
    img {
      width: 100%;
    }
    &:hover {
      outline: 2px solid black;
    }
  }
}

.userScenesBackgrounds, .publicScenesBackgrounds {
  display: flex;
  justify-content: center;
  width: 100%;
}
