.allHeader {
  z-index: 10;
  background: url("<%= asset_path('dark_wood.png')%>");
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: fixed;
  width: 100%;
  color: white;
  height: 120px;
  h1 {
    font-family: Arial, sans-serif;
    font-size: 3vw;
  }
  button {
    margin: 10px 20px;
    outline-style: none;
    padding: 5px;
    font-size: 1.5vw;
    border-radius: 10px;
    background: white;
    box-shadow: 5px 5px 20px #333;
    transition: all .2s ease;
    &:hover {
      transform: scale(1.1);
    }
  }
  .instructions {
    font-family: Arial, sans-serif;
    padding: 10px;
    width: 150px;
    background: white;
    color: black;
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    border-radius: 0 0 10px 0;
    li {
      position: relative;
      top: 10px;
      left: -10px;
      height: 0;
      color: white;
      transition: .2s all ease;
    }
    &:hover {
      overflow: visible;
      li {
        border: 2px solid black;
        border-radius: 0 10px 10px 0;
        box-shadow: 0 0 5px white;
        padding: 5px;
        display: flex;
        align-items: center;
        height: 40px;
        width: 500px;
        background: url("<%= asset_path('dark_wood.png')%>");
        color: white;
        &:nth-child(odd) {
          background: url("<%= asset_path('purty_wood.png')%>");
          color: black;
        }
      }
    }
  }
}
