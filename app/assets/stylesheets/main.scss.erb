/********** Setup ***********/
@import 'partials/setup/variables';
@import 'partials/setup/reset';
@import 'partials/setup/fonts';
@import 'partials/setup/general';

/***** Site Components ******/

* {
  margin: 0;
  padding: 0;
}

button {
  outline-style: none;
}

body {
  background: url("<%= asset_path('purty_wood.png')%>");
}

.scenesSection {
  position: relative;
  top: 100px;
  .sceneOption, .backgroundOption {
    margin: 20px;
    background: white;
    width: 20%;
    img {
      width: 100%;
    }
    &:hover {
      outline: 2px solid black;
    }
  }
}

.allHeader {
  z-index: 10;
  background: url("<%= asset_path('dark_wood.png')%>");
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: fixed;
  width: 100%;
  color: white;
  height: 100px;
  button {
    margin: 5px;
    background: white;
    padding: 5px;
    border-radius: 5px;
  }
}

.drawSection {
  position: relative;
  top: 100px;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100vw;
  padding: 25px;
  .canvasNames {
    position: absolute;
    top: 0;
    padding: 5px;
    font-size: 25px;
    input {
      padding: 5px;
      font-size: 20px;
    }
  }
}

.leftOptions {
  padding: 10px;
  margin-left: 10px;
  display: flex;
  flex-direction: column;
  height: 550px;
  input[type="color"] {
    margin-top: 10px;
    width: 50px;
    height: 50px;
  }
  button {
    padding: 5px;
    height: 30px;
  }
  .option {
    display: flex;
    flex-direction: column;
    margin-bottom: 10px;
  }
}

.canvasContainer {
  display: flex;
  align-items: center;
  justify-content: center;
  background: url("<%= asset_path('dark_wood.png')%>");
  margin: 20px 0;
  padding: 20px;
  border: 1px solid black;
}

.rightOptions {
  padding: 10px;
  height: 550px;
  button, input[type='number'] {
    padding: 5px;
    height: 30px;
  }
  .option {
    display: flex;
    flex-direction: column;
    margin-bottom: 20px;
  }
}

#myCanvas {
  background: white;
  border: 1px solid blue;
  cursor: url("<%= asset_path('brush_cursor.png')%>"), auto;
}
